package day_07_6thJuly;

public class Inverted_Trinagle_Logic2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n=7;
		
		for(int i=0;i<n;i++) {
			for(int j=0;j<i;j++) {
				System.out.print(" ");
			}
			for(int j=0;j<(2*n-1)-(2*i);j++) {
				System.out.print("*");
			}
			for(int j=0;j<i;j++) {
				System.out.print(" ");
			}
			System.out.println();
		}

	}

}
